<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.aritron.carconnect.activity.NewCarsDetailActivity">

    <include
        android:id="@+id/toolbar_new_cars"
        layout="@layout/toolbar_compare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_new_cars"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        android:layout_marginLeft="@dimen/margin_left_left"
        android:layout_marginRight="@dimen/margin_right_right"
        android:layout_marginBottom="@dimen/margin_top"
        android:elevation="12dp"
        android:background="@color/bckgrnd_color" />

</LinearLayout>
